# API Keys
OPENAI_API_KEY=your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# LLM Configuration
LLM_PROVIDER=openai  # or anthropic
EMBEDDING_MODEL=text-embedding-3-small

# Service Configuration
API_HOST=0.0.0.0
API_PORT=8080
LOG_LEVEL=INFO

# Database URLs (for external connections)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=crawler_db
POSTGRES_USER=crawler
POSTGRES_PASSWORD=password

REDIS_HOST=localhost
REDIS_PORT=6379

QDRANT_HOST=localhost
QDRANT_PORT=6333

# Crawler Settings
MAX_CONCURRENT_CRAWLS=10
DEFAULT_MAX_DEPTH=3
DEFAULT_MIN_QUALITY_SCORE=0.6
BROWSER_POOL_SIZE=5

# Update Settings
ENABLE_INCREMENTAL_UPDATES=true
UPDATE_CHECK_INTERVAL=3600  # seconds

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_EMBEDDING_REQUESTS_PER_MINUTE=100

# Main Project Vector API Integration
MAIN_PROJECT_API_URL=http://localhost:8000
MAIN_PROJECT_API_KEY=crawler-api-key

# Vector Service Settings
VECTOR_BATCH_SIZE=100
VECTOR_TIMEOUT=30